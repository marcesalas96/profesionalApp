{
  "expo": {
    "name": "Profesional App - Choferes",
    "slug": "ProfesionalApp",
    "version": "2.2.0",
    "orientation": "portrait",
    "icon": "./assets/profesional-remis.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/profesional-remis.png",
      "resizeMode": "contain",
      "backgroundColor": "#262C4E"
    },
    "plugins": [
      [
        "expo-location",
        {
          "isAndroidBackroungLocationEnabled": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/profesional-remis.png",
          "color": "#ffffff"
        }
      ]
    ],
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/profesional-remis.png",
        "backgroundColor": "#ffffff"
      },
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.ACCESS_BACKGROUND_LOCATION"
      ],
      "package": "com.anonymous.ProfesionalApp"
    },
    "web": {
      "favicon": "./assets/profesional-remis.png"
    },
    "extra": {
      "eas": {
        "projectId": "bf09006a-cfd8-4ea9-b94a-a0c0bdb59300"
      }
    }
  }
}
